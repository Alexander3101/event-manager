#room_form.modal.fade role="dialog"
  .modal-dialog.form-dialog
    .modal-content
      .modal-header
        button type="button" class="close" data-dismiss="modal" &times;
        h4 class="modal-title"
      .modal-body
      .modal-footer
        button type="button" class="btn btn-success" =t('btn_save')
        button type="button" class="btn btn-default" data-dismiss="modal" =t('btn_cancel')

javascript:
  $(".room").click(function(){
    var url = "/rooms/"+$(this).attr("id")+"/edit";
    $.get(url, function(data){
      $("#room_form").modal();
      $("#room_form .modal-title").html("#{t('rooms.title_edit')}");
      $("#room_form .modal-body").html(data);
    });
  });
  $(".for_new").click(function(){
    var url = "/rooms/new";
    $.get(url, function(data){
      $("#room_form").modal();
      $("#room_form .modal-title").html("#{t('rooms.title_new')}");
      $("#room_form .modal-body").html(data);
    });
  });
  $(".btn-success").click(function(){
    $(".btn-save_room").click();
  })
